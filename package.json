{
  "name": "kanban-task-management-web-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "lint:es": "eslint --config eslint.config.js \"src/**/*.{ts,html}\"",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss,json,md}\"",
    "prepare": "husky",
    "predeploy": "ng build --configuration production",
    "deploy": "gh-pages -d dist/kanban-task-management-web-app"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.0.3",
    "@angular/common": "^20.0.3",
    "@angular/compiler": "^20.0.3",
    "@angular/core": "^20.0.3",
    "@angular/forms": "^20.0.3",
    "@angular/platform-browser": "^20.0.3",
    "@angular/platform-browser-dynamic": "^20.0.3",
    "@angular/router": "^20.0.3",
    "@taiga-ui/cdk": "^4.40.0",
    "@taiga-ui/core": "^4.40.0",
    "@taiga-ui/icons": "^4.40.0",
    "@taiga-ui/kit": "^4.40.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.2",
    "@angular/cli": "^20.0.2",
    "@angular/compiler-cli": "^20.0.3",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "angular-eslint": "20.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.0",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.33.1"
  },
  "overrides": {
    "rimraf": "^5.0.0",
    "glob": "^9.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,html}": [
      "eslint --fix --max-warnings=0",
      "git add"
    ]
  }
}
